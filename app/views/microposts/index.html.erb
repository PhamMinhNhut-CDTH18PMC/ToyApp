<p id="notice"><%= notice %></p>

<h1>Microposts</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th colspan="3">Chỉnh sửa</th>
    </tr>
  </thead>
  <tbody>
    <% @microposts.each do |micropost| %>
    <tr>
      <th scope="row"><%= micropost.content %></th>
      <td><%= micropost.user_id %></td>
      <td><%= link_to 'Show', micropost %></td>
      <td><%= link_to 'Edit', edit_user_path(micropost) %></td>
      <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Micropost', new_micropost_path,class:"btn btn-primary" %>
